<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Custom Navbar Styles */
        .custom-navbar {
            background-color: #000000; /* Black Background */
        }

            .custom-navbar .navbar-nav .nav-link {
                color: #FFEB3B; /* Yellow Text */
            }

                .custom-navbar .navbar-nav .nav-link:hover {
                    color: #FFC107; /* Lighter Yellow on Hover */
                }

        .dropdown-menu {
            background-color: #333333; /* Darker Background for Dropdown */
        }

        .dropdown-item {
            color: #FFEB3B; /* Yellow Text in Dropdown */
        }

            .dropdown-item:hover {
                background-color: #444444; /* Darker Hover Color */
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark custom-navbar">
        <div class="container">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                    <li>@Html.ActionLink("Services", "Services", "Home", new { area = "" }, new { @class = "nav-link" })</li>


                    <!-- Dropdown Menu -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                           Bikes_Showroom
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>@Html.ActionLink("Bikes", "Bikes", "Drop", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Bikes_Delivery", "Bikes_Delivery", "Drop", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Bikes_Purchase", "Bikes_Purchase", "Drop", new { area = "" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>


                <!-- Search Bar and Button (Aligned to Right) -->
                <form class="d-flex ms-auto">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Bikes Application</p>
        </footer>
    </div>

    <!-- Load bootstrap --!>

    <!-- Load Bootstrap 5 JS bundle (which includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @Scripts.Render("~/bundles/jquery")  <!-- jQuery if needed -->
    @RenderSection("scripts", required: false)

</body>
</html>
