<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mywebapps</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mywebapps.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">mywebapps</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>


                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<footer style="background-color: #333; color: #fff; padding: 20px; text-align: center;">
    <div class="footer-container">
        <p style="margin: 10px 0;">&copy; 2024 Your Company Name. All rights reserved.</p>
        <ul style="list-style-type: none; padding: 0; margin: 10px 0;">
            <li style="display: inline; margin: 0 15px;">
                <a href="#privacy" style="color: #fff; text-decoration: none;">Privacy Policy</a>
            </li>
            <li style="display: inline; margin: 0 15px;">
                <a href="#terms" style="color: #fff; text-decoration: none;">Terms of Service</a>
            </li>
            <li style="display: inline; margin: 0 15px;">
                <a href="#contact" style="color: #fff; text-decoration: none;">Contact Us</a>
            </li>
        </ul>
        <div class="social-media" style="margin-top: 10px;">
            <a href="https://facebook.com" target="_blank" style="color: #fff; margin: 0 10px; text-decoration: none;">Facebook</a>
            <a href="https://twitter.com" target="_blank" style="color: #fff; margin: 0 10px; text-decoration: none;">Twitter</a>
            <a href="https://instagram.com" target="_blank" style="color: #fff; margin: 0 10px; text-decoration: none;">Instagram</a>
        </div>
    </div>
</footer>
</body>
</html>
